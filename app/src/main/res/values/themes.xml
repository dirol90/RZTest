<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RZTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_5</item>
        <item name="colorPrimaryVariant">@color/grey_4</item>
        <item name="colorOnPrimary">@color/grey_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_5</item>
        <item name="colorSecondaryVariant">@color/grey_4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    <style name="Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>